# ==========================================
# CGI ENGINE - Configuration Environnement
# ==========================================

# Serveur
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Base de données PostgreSQL
# SÉCURITÉ: Utilisez un mot de passe fort (min 32 caractères, généré avec openssl rand -hex 24)
# CONNECTION POOLING (recommandé en production):
#   - connection_limit: Nombre max de connexions (défaut: 20)
#   - pool_timeout: Temps attente connexion en secondes (défaut: 20)
#   - connect_timeout: Timeout connexion initiale en secondes (défaut: 10)
DATABASE_URL="postgresql://user:your-strong-password-48-hex-chars@localhost:5432/cgi_engine?schema=public&connection_limit=20&pool_timeout=20&connect_timeout=10"

# JWT Configuration (IMPORTANT: utilisez une clé forte en production!)
# Générer avec: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookies sécurisés
COOKIE_SECRET=your-cookie-secret-minimum-32-characters
COOKIE_SAME_SITE=strict

# Protection CSRF
CSRF_ENABLED=true
CSRF_SECRET=your-csrf-secret-minimum-32-characters

# Cryptage
BCRYPT_ROUNDS=12

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Pinecone Vector Store
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=cgi-engine
PINECONE_ENVIRONMENT=us-east-1

# Email (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM="NORMX AI <noreply@normx-ai.com>"

# Application URLs
# Development
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000
# Production (décommenter)
# FRONTEND_URL=https://cgi242.normx-ai.com
# BACKEND_URL=https://api.normx-ai.com
# CORS_ORIGIN=https://cgi242.normx-ai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CinetPay (Paiements Congo, Cameroun, Côte d'Ivoire, etc.)
# Inscription: https://cinetpay.com
CINETPAY_SITE_ID=your-site-id
CINETPAY_API_KEY=your-api-key
CINETPAY_SECRET_KEY=your-secret-key

# Redis Cache (améliore performance de 50%, réduit coûts API de 40%)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Metrics Security (Protection endpoint /metrics)
# IPs autorisées en plus de localhost et réseaux privés (séparées par des virgules)
# Exemple: METRICS_WHITELIST_IPS=203.0.113.50,198.51.100.10
METRICS_WHITELIST_IPS=
# Désactiver la protection (UNIQUEMENT pour développement/tests)
METRICS_WHITELIST_DISABLED=false
