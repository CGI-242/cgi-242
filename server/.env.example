# ==========================================
# CGI ENGINE - Configuration Environnement
# ==========================================

# Serveur
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Base de données PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/cgi_engine?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Cryptage
BCRYPT_ROUNDS=12

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Pinecone Vector Store
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=cgi-engine
PINECONE_ENVIRONMENT=us-east-1

# Email (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM="CGI Engine <noreply@cgi-engine.com>"

# Application URLs
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CinetPay (Paiements Congo, Cameroun, Côte d'Ivoire, etc.)
# Inscription: https://cinetpay.com
CINETPAY_SITE_ID=your-site-id
CINETPAY_API_KEY=your-api-key
CINETPAY_SECRET_KEY=your-secret-key

# Logging
LOG_LEVEL=debug
