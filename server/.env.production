# ==========================================
# CGI 242 - Configuration Production
# ==========================================
# Copier ce fichier vers .env sur le serveur et remplacer les valeurs

# Serveur
NODE_ENV=production
PORT=3000
API_PREFIX=/api

# Base de donnees PostgreSQL
DATABASE_URL="postgresql://cgiengine:CHANGE_ME_DB_PASSWORD@localhost:5435/cgiengine?schema=public&connection_limit=20&pool_timeout=20&connect_timeout=10"

# JWT Configuration (generer avec: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookies securises
COOKIE_SECRET=CHANGE_ME_COOKIE_SECRET
COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=.normx-ai.com

# Protection CSRF
CSRF_ENABLED=true
CSRF_SECRET=CHANGE_ME_CSRF_SECRET

# Cryptage
BCRYPT_ROUNDS=12

# OpenAI
OPENAI_API_KEY=CHANGE_ME_OPENAI_KEY
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
ANTHROPIC_API_KEY=CHANGE_ME_ANTHROPIC_KEY
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Pinecone Vector Store
PINECONE_API_KEY=CHANGE_ME_PINECONE_KEY
PINECONE_INDEX=cgi-242
PINECONE_ENVIRONMENT=us-east-1

# Email (OVH SMTP)
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_USER=no-reply@normx-ai.com
SMTP_PASS=CHANGE_ME_SMTP_PASSWORD
EMAIL_FROM="CGI 242 <no-reply@normx-ai.com>"

# Application URLs
FRONTEND_URL=https://cgi242.normx-ai.com
BACKEND_URL=https://api.cgi242.normx-ai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (Paiements)
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK

# Qdrant Vector Store
QDRANT_URL=http://localhost:6333

# Redis Cache
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Sentry (Error Tracking)
SENTRY_DSN=CHANGE_ME_SENTRY_DSN

# Admin
ADMIN_EMAIL=admin@normx-ai.com
SUPER_ADMIN_EMAILS=admin@normx-ai.com
