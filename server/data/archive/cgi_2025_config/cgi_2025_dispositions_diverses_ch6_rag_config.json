      },
      {
        "groupe": "declarations_annuelles_salaires",
        "articles": ["Art. 176", "Art. 177", "Art. 177 bis", "Art. 178"],
        "raison": "État annuel des salaires et déclarations"
      },
      {
        "groupe": "declarations_remunerations_diverses",
        "articles": ["Art. 179", "Art. 180", "Art. 181", "Art. 182"],
        "raison": "Rémunérations diverses et régularisation"
      },
      {
        "groupe": "retenue_commissions_honoraires",
        "articles": ["Art. 183", "Art. 183 bis", "Art. 183 ter"],
        "raison": "Retenue 10% sur commissions, honoraires, droits d'auteur"
      },
      {
        "groupe": "societes_etrangeres_126ter",
        "articles": ["Art. 185 bis"],
        "raison": "Obligations sociétés étrangères pétrolières"
      },
      {
        "groupe": "non_residents_complet",
        "articles": ["Art. 185 ter-A", "Art. 185 ter-B", "Art. 185 ter-C", "Art. 185 ter-D", "Art. 185 ter-E", "Art. 185 ter-F"],
